{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "update_dependencies",
            "type": "shell",
            "command": "git submodule update --init",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen",
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake -S . -B build && cmake --build build && cmake --build build --target Shaders",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_dependencies_windows",
            "type": "shell",
            "command": "cd ${workspaceFolder}/libs && cd entt && cmake -S . -B build -D BUILD_SHARED_LIBS=TRUE && cmake --build build --config Release --target install && cd .. && cd spdlog && cmake -S . -B build -D BUILD_SHARED_LIBS=TRUE && cmake --build build --config Release --target install && cd .. && cd KTX-Software && cmake -S . -B build -D KTX_FEATURE_TESTS=OFF  && cmake --build build --config Release --target install && cd .. && cd glfw && cmake -S . -B build -D BUILD_SHARED_LIBS=TRUE && cmake --build build --config Release --target install && cd ..",
            "problemMatcher": [],
        }
    ]
}
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build dependencies",
            "type": "shell",
            "command": "git submodule foreach 'mkdir -p build && cd build cmake -S .. -B . -DGLFW_BUILD_TESTS=0 -DGLFW_BUILD_EXAMPLES=0 -DBUILD_TESTING=0 && make install || :'",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen",
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake -S ../ -B ./ && cmake --build . && cmake --build . --target Shaders && ./rush_vk && cd ${workspaceFolder}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
